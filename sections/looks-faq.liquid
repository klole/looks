<section class="looks-faq" data-section-id="{{ section.id }}">
  <div class="looks-faq__inner">
    <div class="looks-faq__header looks-reveal">
      <div class="looks-faq__label">{{ section.settings.label }}</div>
      <h2 class="looks-faq__heading">{{ section.settings.heading }}</h2>
    </div>

    <div class="looks-faq__list">
      {%- for block in section.blocks -%}
        <details class="looks-faq__item" {{ block.shopify_attributes }}>
          <summary class="looks-faq__question">
            <span>{{ block.settings.question }}</span>
            <span class="looks-faq__icon" aria-hidden="true"></span>
          </summary>
          <div class="looks-faq__answer">
            {{ block.settings.answer }}
          </div>
        </details>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Looks: FAQ",
  "class": "looks-section",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Section label",
      "default": "FAQ"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "How long until I see results?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Most men start noticing smoother texture and gradual fading within 4–6 weeks of consistent daily use. Full results develop over 8–12 weeks. This isn't an overnight fix — it's a baseline upgrade.</p>"
        }
      ]
    }
  ],
